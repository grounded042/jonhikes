
{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class=post-meta>
        	<p>Posted <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time> by {{author}} {{tags prefix=" under "}}</p>
    	</div>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="120"}} <a class="read-more" href="{{url}}">Read More</a></p>
    </section>
</article>
{{/foreach}}
